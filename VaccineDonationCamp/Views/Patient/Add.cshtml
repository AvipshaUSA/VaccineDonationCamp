@using VaccineDonationCamp.ViewModel;
@model AddPatientViewModel;
<h1>Add Event</h1>

<form method="post">
    <div asp-controller="Patient" asp-action="Add" class="form-group">

        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>

    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dob"></label>
        <input type="date" asp-for="Dob" />
        <span asp-validation-for="Dob"></span>
    </div>


    <div class="form-group">
        <label asp-for="ContactNo"></label>
        <input asp-for="ContactNo" />
        <span asp-validation-for="ContactNo"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" />
        <span asp-validation-for="City"></span>
    </div>

    <div class="form-group">
        <label asp-for="State"></label>
        <input asp-for="State" />
        <span asp-validation-for="State"></span>
    </div>



    <div class="form-group">
        <label asp-for="Zip"></label>
        <input type="number" asp-for="Zip" />
        <span asp-validation-for="Zip"></span>
    </div>


    <input type="Submit" value="Add Patient!" />

</form>


<p>

    <a asp-controller="Patient" asp-action="Index">Patient List</a> <!--this will create a link to go to Event List page-->

</p>