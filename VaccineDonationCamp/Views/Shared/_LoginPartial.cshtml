@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@*<ul class="navbar-nav">*@
@if (SignInManager.IsSignedIn(User))
{
    <div class="form-inline">
    @*<li class="nav-item">*@
    <a id="manage" class="text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User) !</a>
    @*</li>*@
    @*<li class="nav-item">*@
    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
    </form>

        </div>
    @*</li>*@
}
else
{



    <div class="dropdown">
        @*<button class="dropbtn">Register</button>*@
        <div class="dropdown-content">


            <a class="text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>


            <a class="text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>


        </div>
    </div>

    
}
@*</ul>*@
